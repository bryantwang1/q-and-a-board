{{#if addNewAnswer}}
  <h1>New Answer</h1>
  <div class="form-div">
    <form>
      <div class="form-group">
        <label for="user">Username: </label>
        {{input value=user id="user"}}
      </div>
      <div class="form-group">
        <label for="answer">Answer: </label>
        {{textarea value=answer id="answer"}}
      </div>
      <button {{action 'saveAnswer'}}>Save Answer</button>
    </form>
  </div>
{{else}}
  <button {{action 'answerFormShow'}}>Post New Answer</button>
{{/if}}
